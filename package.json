{
  "name": "scratch-code",
  "displayName": "scratch-code",
  "description": "Scratchpad for VSCode",
  "version": "0.4.4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladimir-kotikov/scratch-code.git"
  },
  "bugs": {
    "url": "https://github.com/vladimir-kotikov/scratch-code/issues"
  },
  "homepage": "https://github.com/vladimir-kotikov/scratch-code",
  "publisher": "vlkoti",
  "changelog": "CHANGELOG.md",
  "icon": "resources/extension.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "scratchpad",
    "snippets",
    "notes"
  ],
  "activationEvents": [
    "onFileSystem:scratch"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scratches.newScratch",
        "title": "New Scratch...",
        "category": "Scratches",
        "icon": "$(new-file)"
      },
      {
        "command": "scratches.quickOpen",
        "title": "Quick Open",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.quickSearch",
        "title": "Quick Search",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.resetIndex",
        "title": "Reset Search Index",
        "category": "Scratches"
      },
      {
        "command": "scratches.renameScratch",
        "title": "Rename...",
        "category": "Scratches"
      },
      {
        "command": "scratches.newFolder",
        "title": "New Folder...",
        "category": "Scratches",
        "icon": "$(new-folder)"
      },
      {
        "command": "scratches.delete",
        "title": "Delete",
        "category": "Scratches",
        "icon": "$(trash)"
      },
      {
        "command": "scratches.openDirectory",
        "title": "Open directory",
        "category": "Scratches",
        "icon": "$(folder-opened)"
      },
      {
        "command": "scratches.toggleSort",
        "title": "Toggle sort order",
        "category": "Scratches",
        "icon": "$(graph)"
      },
      {
        "command": "scratches.pin",
        "title": "Pin",
        "category": "Scratches",
        "icon": "$(pinned)"
      },
      {
        "command": "scratches.unpin",
        "title": "Unpin",
        "category": "Scratches",
        "icon": "$(pin)"
      }
    ],
    "keybindings": [
      {
        "key": "Ctrl+backspace",
        "mac": "Cmd+backspace",
        "command": "scratches.delete",
        "when": "scratchesView",
        "args": {
          "uri": "${selectedItem}"
        }
      }
    ],
    "languageModelTools": [
      {
        "name": "listScratches",
        "displayName": "List Scratches",
        "icon": "${list}",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "listScratches",
        "userDescription": "Lists available scratches",
        "modelDescription": "Lists all scratch files in the user's scratch storage, optionally filtered by a glob pattern.\nUse when user asks to see available scratches or find files by pattern.\n\nParameters:\n- filter (optional): Glob pattern (e.g., \"**/*.ts\" for TypeScript, \"**/notes/**\" for directory)\n\nExamples:\n- {} → \"scratch:///notes.md\\nscratch:///todo.txt\"\n- { filter: \"**/*.ts\" } → \"scratch:///code/example.ts\"\n\nReturns: Newline-separated URIs or \"No scratches found.\"",
        "tags": [
          "scratches",
          "memory"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "filter": {
              "type": "string",
              "description": "Filter to use when listing scratches. Can be a glob pattern or a directory path. If omitted, all scratches are listed. Only use if a specific directory or set of directories is needed, otherwise prefer leaving it empty and getting a full list instead.",
              "default": ""
            }
          }
        }
      },
      {
        "name": "readScratch",
        "displayName": "Read Scratch",
        "icon": "$(file-text)",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "readScratch",
        "userDescription": "Reads content from a scratch file",
        "modelDescription": "Reads the content of a scratch file, optionally reading a specific line range.\nUse when user asks to view or retrieve scratch content.\n\nParameters:\n- uri (required): Scratch URI (e.g., \"scratch:///notes.md\") or URI string\n- lineFrom (optional): Starting line number (0-based, inclusive)\n- lineTo (optional): Ending line number (0-based, exclusive)\n\nExamples:\n- { uri: \"scratch:///notes.md\" } → full file content\n- { uri: \"scratch:///code.ts\", lineFrom: 10, lineTo: 20 } → lines 10-19\n\nReturns: File content as string.",
        "tags": [
          "scratches",
          "memory"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "uri": {
              "type": "string",
              "description": "The scratch URI to read from. Must be a valid scratch:// URI or URI string."
            },
            "lineFrom": {
              "type": "number",
              "description": "Optional starting line number (0-based, inclusive). If omitted, reads from the beginning."
            },
            "lineTo": {
              "type": "number",
              "description": "Optional ending line number (0-based, exclusive). If omitted, reads to the end."
            }
          },
          "required": [
            "uri"
          ]
        }
      },
      {
        "name": "writeScratch",
        "displayName": "Write Scratch",
        "icon": "$(save)",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "writeScratch",
        "userDescription": "Writes content to a scratch file",
        "modelDescription": "Writes content to a scratch file, creating it if it doesn't exist or overwriting if it does.\nUse when user asks to save, create, or update scratch content.\n\nParameters:\n- uri (required): Scratch URI (e.g., \"scratch:///notes.md\") or URI string\n- content (required): Content to write to the file\n\nExamples:\n- { uri: \"scratch:///notes.md\", content: \"My notes\" } → creates/overwrites file\n- { uri: \"scratch:///code/test.ts\", content: \"const x = 1;\" } → creates nested file\n\nReturns: \"Scratch written successfully.\"",
        "tags": [
          "scratches",
          "memory"
        ],
        "inputSchema": {
          "type": "object",
          "properties": {
            "uri": {
              "type": "string",
              "description": "The scratch URI to write to. Must be a valid scratch:// URI or URI string. Parent directories will be created if needed."
            },
            "content": {
              "type": "string",
              "description": "The content to write to the file. Will overwrite existing content if file exists."
            }
          },
          "required": [
            "uri",
            "content"
          ]
        }
      }
    ],
    "configuration": {
      "title": "Scratches",
      "properties": {
        "scratches.scratchDirectory": {
          "type": "string",
          "description": "Directory where scratch files are stored, defaults to extension's global storage directory"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scratchesContainer",
          "title": "Scratches",
          "icon": "resources/activity-bar.svg"
        }
      ]
    },
    "views": {
      "scratchesContainer": [
        {
          "id": "scratchesView",
          "name": "Scratches",
          "contextualTitle": "Scratches"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scratchesView",
        "contents": "No scratches found\n[Create a new one](command:scratches.newScratch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scratches.toggleSort",
          "when": "view == scratchesView",
          "group": "navigation@1"
        },
        {
          "command": "scratches.newScratch",
          "when": "view == scratchesView",
          "group": "navigation@2"
        },
        {
          "command": "scratches.newFolder",
          "when": "view == scratchesView",
          "group": "navigation@3"
        },
        {
          "command": "scratches.openDirectory",
          "when": "view == scratchesView",
          "group": "menu@1"
        }
      ],
      "view/item/context": [
        {
          "command": "scratches.newScratch",
          "when": "view == scratchesView",
          "group": "1_create"
        },
        {
          "command": "scratches.newFolder",
          "when": "view == scratchesView",
          "group": "1_create"
        },
        {
          "command": "scratches.renameScratch",
          "when": "view == scratchesView",
          "group": "2_delete"
        },
        {
          "command": "scratches.delete",
          "when": "view == scratchesView && (viewItem == 'folder' || viewItem == 'scratch')",
          "group": "2_delete"
        },
        {
          "command": "scratches.pin",
          "when": "view == scratchesView && viewItem != 'pinned' && viewItem != 'folder'",
          "group": "inline"
        },
        {
          "command": "scratches.unpin",
          "when": "view == scratchesView && viewItem == 'pinned' && viewItem != 'folder'",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && node .esbuild.js",
    "compile:tests": "tsc",
    "watch": "npx npm-run-all -p watch:*",
    "watch:esbuild": "node .esbuild.js --watch",
    "watch:tests": "tsc --watch",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node .esbuild.js --production",
    "fmt": "prettier --write src && eslint src/**/*.ts --fix",
    "lint": "prettier --check src && eslint src/**/*.ts",
    "test": "npx rimraf out && npm run compile:tests && vscode-test",
    "ui:test": "npx extest run-tests 'out/ui-test/**/*.test.js' --storage .uitest-temp/ --code_version max --type stable --extensions_dir .uitest-temp/extensions",
    "prepare": "npx husky || true"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vscode-extension-tester": "^8.19.0"
  },
  "dependencies": {
    "minimatch": "^10.1.1",
    "minisearch": "^7.2.0",
    "ts-pattern": "^5.9.0"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "avoid"
  }
}
