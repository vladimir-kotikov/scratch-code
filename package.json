{
  "name": "scratch-code",
  "displayName": "scratch-code",
  "description": "Scratchpad for VSCode",
  "version": "0.2.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladimir-kotikov/scratch-code.git"
  },
  "publisher": "vlkoti",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:scratch"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scratches.newScratch",
        "title": "New",
        "category": "Scratches",
        "icon": "$(new-file)"
      },
      {
        "command": "scratches.quickOpen",
        "title": "Quick Open",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.quickSearch",
        "title": "Quick Search",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.resetIndex",
        "title": "Reset Search Index",
        "category": "Scratches"
      },
      {
        "command": "scratches.newScratchFromBuffer",
        "title": "New from current buffer",
        "category": "Scratches"
      },
      {
        "command": "scratches.renameScratch",
        "title": "Rename",
        "category": "Scratches"
      },
      {
        "command": "scratches.deleteScratch",
        "title": "Delete",
        "category": "Scratches",
        "icon": "$(trash)"
      },
      {
        "command": "scratches.openDirectory",
        "title": "Open directory",
        "category": "Scratches",
        "icon": "$(folder-opened)"
      }
    ],
    "configuration": {
      "title": "Scratches",
      "properties": {
        "scratches.scratchDirectory": {
          "type": "string",
          "description": "Directory where scratch files are stored, defaults to extension's global storage directory"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "scratches",
          "name": "Scratches"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scratches",
        "contents": "No scratches found\n[Create a new one](command:scratches.newScratch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scratches.openDirectory",
          "when": "view == scratches",
          "group": "navigation"
        },
        {
          "command": "scratches.newScratch",
          "when": "view == scratches",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "scratches.renameScratch",
          "when": "view == scratches",
          "group": "1_modification"
        },
        {
          "command": "scratches.deleteScratch",
          "when": "view == scratches",
          "group": "2_deletion"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node .esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "check-types": "tsc --noEmit",
    "watch:esbuild": "node .esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node .esbuild.js --production",
    "fmt": "prettier --write src && eslint src/**/*.ts --fix",
    "lint": "prettier --check src && eslint src/**/*.ts",
    "test": "node ./out/test/runTest.js",
    "prepare": "npx husky || true"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.105.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.2",
    "esbuild": "^0.25.12",
    "eslint": "^9.38.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "mocha": "^11.7.4",
    "prettier": "^3.6.2",
    "sinon": "^21.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "lang-map": "^0.4.0",
    "minisearch": "^7.2.0",
    "ts-pattern": "^5.9.0"
  },
  "prettier": {
    "printWidth": 100
  }
}
