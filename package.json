{
  "name": "scratch-code",
  "displayName": "scratch-code",
  "description": "Scratchpad for VSCode",
  "version": "0.1.5",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladimir-kotikov/scratch-code.git"
  },
  "publisher": "vlkoti",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onFileSystem:scratch",
    "onCommand:scratches.newScratch",
    "onCommand:scratches.deleteScratch",
    "onView:scratches"
  ],
  "main": "./out/main.js",
  "contributes": {
    "commands": [
      {
        "command": "scratches.newScratch",
        "title": "New",
        "category": "Scratches",
        "icon": "$(new-file)"
      },
      {
        "command": "scratches.renameScratch",
        "title": "Rename",
        "category": "Scratches"
      },
      {
        "command": "scratches.deleteScratch",
        "title": "Delete",
        "category": "Scratches",
        "icon": "$(trash)"
      }
    ],
    "configuration":{
      "title": "Scratches",
      "properties": {
        "scratches.scratchDirectory": {
          "type": "string",
          "description": "Directory where scratch files are stored, defaults to extension's global storage directory"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "scratches",
          "name": "Scratches"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scratches",
        "contents": "No scratches found\n[Create a new one](command:scratches.newScratch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scratches.newScratch",
          "when": "view == scratches",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "scratches.renameScratch",
          "when": "view == scratches",
          "group": "1_modification"
        },
        {
          "command": "scratches.deleteScratch",
          "when": "view == scratches",
          "group": "2_deletion"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn clean && yarn compile",
    "vscode:publish": "vsce publish",
    "vscode:package": "vsce package",
    "clean": "rimraf *.vsix out",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "fmt": "prettier --write src && eslint src/**/*.ts --fix",
    "lint": "prettier --check src && eslint src/**/*.ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "@vscode/test-electron": "^2.1.3",
    "eslint": "^8.11.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.2",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.5",
    "vsce": "^2.7.0"
  }
}
