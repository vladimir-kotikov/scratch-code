{
  "name": "scratch-code",
  "displayName": "scratch-code",
  "description": "Scratchpad for VSCode",
  "version": "0.4.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vladimir-kotikov/scratch-code.git"
  },
  "bugs": {
    "url": "https://github.com/vladimir-kotikov/scratch-code/issues"
  },
  "homepage": "https://github.com/vladimir-kotikov/scratch-code",
  "publisher": "vlkoti",
  "changelog": "CHANGELOG.md",
  "icon": "resources/extension.png",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "scratchpad",
    "snippets",
    "notes"
  ],
  "activationEvents": [
    "onFileSystem:scratch"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "scratches.newScratch",
        "title": "New Scratch...",
        "category": "Scratches",
        "icon": "$(new-file)"
      },
      {
        "command": "scratches.quickOpen",
        "title": "Quick Open",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.quickSearch",
        "title": "Quick Search",
        "category": "Scratches"
      },
      {
        "command": "scratches.search.resetIndex",
        "title": "Reset Search Index",
        "category": "Scratches"
      },
      {
        "command": "scratches.renameScratch",
        "title": "Rename...",
        "category": "Scratches"
      },
      {
        "command": "scratches.newFolder",
        "title": "New Folder...",
        "category": "Scratches",
        "icon": "$(folder)"
      },
      {
        "command": "scratches.delete",
        "title": "Delete",
        "category": "Scratches",
        "icon": "$(trash)"
      },
      {
        "command": "scratches.openDirectory",
        "title": "Open directory",
        "category": "Scratches",
        "icon": "$(folder-opened)"
      },
      {
        "command": "scratches.toggleSort",
        "title": "Toggle sort order",
        "category": "Scratches",
        "icon": "$(graph)"
      },
      {
        "command": "scratches.pin",
        "title": "Pin",
        "category": "Scratches",
        "icon": "$(pin)"
      },
      {
        "command": "scratches.unpin",
        "title": "Unpin",
        "category": "Scratches",
        "icon": "$(pinned)"
      }
    ],
    "keybindings": [
      {
        "key": "Ctrl+backspace",
        "mac": "Cmd+backspace",
        "command": "scratches.delete",
        "when": "scratchesView",
        "args": {
          "uri": "${selectedItem}"
        }
      }
    ],
    "configuration": {
      "title": "Scratches",
      "properties": {
        "scratches.scratchDirectory": {
          "type": "string",
          "description": "Directory where scratch files are stored, defaults to extension's global storage directory"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "scratchesContainer",
          "title": "Scratches",
          "icon": "resources/activity-bar.svg"
        }
      ]
    },
    "views": {
      "scratchesContainer": [
        {
          "id": "scratchesView",
          "name": "Scratches",
          "contextualTitle": "Scratches"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "scratchesView",
        "contents": "No scratches found\n[Create a new one](command:scratches.newScratch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "scratches.toggleSort",
          "when": "view == scratchesView",
          "group": "navigation@1"
        },
        {
          "command": "scratches.newScratch",
          "when": "view == scratchesView",
          "group": "navigation@2"
        },
        {
          "command": "scratches.openDirectory",
          "when": "view == scratchesView",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "scratches.newScratch",
          "when": "view == scratchesView",
          "group": "1_create"
        },
        {
          "command": "scratches.newFolder",
          "when": "view == scratchesView",
          "group": "1_create"
        },
        {
          "command": "scratches.renameScratch",
          "when": "view == scratchesView",
          "group": "2_delete"
        },
        {
          "command": "scratches.delete",
          "when": "view == scratchesView && (viewItem == 'folder' || viewItem == 'scratch')",
          "group": "2_delete"
        },
        {
          "command": "scratches.pin",
          "when": "view == scratchesView && viewItem != 'pinned'",
          "group": "inline"
        },
        {
          "command": "scratches.unpin",
          "when": "view == scratchesView && viewItem == 'pinned'",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "compile": "npm run check-types && node .esbuild.js",
    "compile:tests": "tsc",
    "watch": "npx npm-run-all -p watch:*",
    "watch:esbuild": "node .esbuild.js --watch",
    "watch:tests": "tsc --watch",
    "vscode:prepublish": "npm run package",
    "package": "npm run check-types && node .esbuild.js --production",
    "fmt": "prettier --write src && eslint src/**/*.ts --fix",
    "lint": "prettier --check src && eslint src/**/*.ts",
    "test": "npx rimraf out && npm run compile:tests && vscode-test",
    "ui:test": "npx extest run-tests 'out/ui-test/**/*.test.js' --storage .uitest-temp/ --code_version max --type stable --extensions_dir .uitest-temp/extensions",
    "prepare": "npx husky || true"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.10.1",
    "@types/vscode": "^1.105.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.0",
    "esbuild": "^0.25.12",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "mocha": "^11.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.47.0",
    "vscode-extension-tester": "^8.19.0"
  },
  "dependencies": {
    "minisearch": "^7.2.0",
    "ts-pattern": "^5.9.0"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "avoid"
  }
}
